<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home2</title>
    <style>
      body {
        font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande",
          "Lucida Sans", Arial, sans-serif;
      }
    </style>
  </head>
  <body>
    <h1>Url shortner</h1>
    <% if (locals.id) { %>
    <p>URL Generated: http://localhost:8001/api/url/<%= id %></p>
    <% } %>
    <div>
      <form action="/api/url" method="POST">
        <label for="">Enter Your Original URL</label>
        <input type="text" name="url" placeholder="https://google.com" />
        <button type="submit">Submit</button>
      </form>
    </div>
    <div>
       <% if (locals.url) { %>
      <table>
        <thead>
          <th>S. No</th>
          <th>ShortID</th>
          <th>Original URL</th>
          <th>Visit History</th>
        </thead>
        <tbody>
          <% url.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
        <% } %>
    </div>
  </body>
</html>
